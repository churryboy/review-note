/* Back Button */
.back-btn {
    background: transparent;
    border: none;
    border-radius: 24px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--primary-color);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition);
}

.back-btn:hover {
    background: rgba(255, 85, 0, 0.05);
}

/* Bottom Navigation */
.bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-around;
    padding: 8px 0;
    z-index: 1000;
    height: var(--nav-height);
}

.nav-item {
    background: none;
    border: none;
    padding: 8px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    color: #999;
    font-size: 0.75rem;
    cursor: pointer;
    transition: var(--transition);
    flex: 1;
    position: relative;
}

.nav-item i {
    font-size: 1.2rem;
}

.nav-item.active {
    color: var(--primary-color);
}

.nav-item:hover {
    color: var(--primary-color);
}

.quiz-badge {
    position: absolute;
    top: -2px;
    right: calc(50% - 20px);
    background: #ff4444;
    color: white;
    font-size: 0.6rem;
    font-weight: 600;
    padding: 2px 4px;
    border-radius: 50%;
    min-width: 14px;
    height: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

/* Enhanced Pop Quiz Added Animation */
.quiz-badge.pop-quiz-added {
    animation: popQuizAdded 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* Navigation highlight when pop quiz is added */
.nav-item.quiz-nav.pop-quiz-highlight {
    animation: navHighlight 0.8s ease-out;
}

@keyframes navHighlight {
    0% { 
        background: transparent;
        box-shadow: none;
    }
    30% { 
        background: rgba(0, 200, 81, 0.1);
        box-shadow: 0 0 20px rgba(0, 200, 81, 0.3);
    }
    100% { 
        background: transparent;
        box-shadow: none;
    }
}

@keyframes popQuizAdded {
    0% { 
        transform: scale(1);
        background: #ff4444;
    }
    25% { 
        transform: scale(1.4) rotate(5deg);
        background: #00C851;
        box-shadow: 0 0 20px rgba(0, 200, 81, 0.6);
    }
    50% { 
        transform: scale(1.6) rotate(-3deg);
        background: #00C851;
        box-shadow: 0 0 25px rgba(0, 200, 81, 0.8);
    }
    75% { 
        transform: scale(1.2) rotate(2deg);
        background: #00C851;
        box-shadow: 0 0 15px rgba(0, 200, 81, 0.4);
    }
    100% { 
        transform: scale(1);
        background: #ff4444;
        box-shadow: none;
    }
}

/* Modals */
.image-popup-overlay {
