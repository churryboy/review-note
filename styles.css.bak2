/* Confetti Animation */
.celebration {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
}

.confetti {
    position: absolute;
    top: -10px;
    width: 8px;
    height: 12px;
    background: hsl(var(--h, 0) 90% 60%);
    opacity: 0.9;
    animation: drop 1.2s ease-out forwards;
}

.confetti:nth-child(1) { left: 10%; --h: 10; animation-delay: 0s; }
.confetti:nth-child(2) { left: 30%; --h: 90; animation-delay: 0.1s; }
.confetti:nth-child(3) { left: 50%; --h: 180; animation-delay: 0.2s; }
.confetti:nth-child(4) { left: 70%; --h: 270; animation-delay: 0.3s; }
.confetti:nth-child(5) { left: 85%; --h: 340; animation-delay: 0.35s; }

@keyframes drop {
    0% { transform: translateY(-100%) rotate(0deg); }
    70% { transform: translateY(70vh) rotate(240deg); }
    100% { transform: translateY(92vh) rotate(360deg); opacity: 0; }
}

/* Sparkles Animation */
.sparkles {
    position: absolute;
    inset: 0;
    pointer-events: none;
}

.sparkle {
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ffd54f;
    box-shadow: 0 0 10px rgba(255, 213, 79, 0.8);
    animation: twinkle 1.3s ease-in-out infinite;
}

.sparkle:nth-child(1) { top: 20%; left: 30%; animation-delay: 0s; }
.sparkle:nth-child(2) { top: 35%; left: 65%; animation-delay: 0.2s; }
.sparkle:nth-child(3) { top: 60%; left: 40%; animation-delay: 0.4s; }

@keyframes twinkle {
    0%, 100% { transform: scale(0.6); opacity: 0.4; }
    50% { transform: scale(1.2); opacity: 1; }
}

